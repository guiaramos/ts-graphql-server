{
  "name": "ts-graphql-server",
  "version": "0.0.1",
  "description": "Start server with TypeScript, GraphQL, PG and TypeORM.",
  "scripts": {
    "start": "NODE_ENV=development npm run generate && ts-node-dev --respawn src/index.ts",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "lint": "eslint --quiet src/**/**.ts",
    "lint:fix": "eslint --fix src/**/*.{js,ts}",
    "db": "docker-compose up --build",
    "generate": "graphql-codegen",
    "test": "NODE_ENV=test jest",
    "test:server": "NODE_ENV=test ts-node src/index.ts"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.15.4",
    "@graphql-codegen/cli": "^1.15.4",
    "@graphql-codegen/schema-ast": "^1.15.4",
    "@graphql-codegen/typescript": "^1.15.4",
    "@graphql-codegen/typescript-resolvers": "^1.15.4",
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.13",
    "@types/yup": "^0.29.3",
    "apollo-server-testing": "^2.15.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript-prettier": "^2.1.1",
    "jest": "^26.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^26.1.1",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.0.10",
    "@graphql-tools/merge": "^6.0.10",
    "@graphql-tools/schema": "^6.0.10",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "apollo-server-express": "^2.15.1",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "eslint-plugin-jest": "^23.17.1",
    "express": "^4.17.3",
    "graphql": "^15.1.0",
    "graphql-tag": "^2.10.3",
    "node-fetch": "^2.6.1",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "yup": "^0.29.1",
    "zen-observable-ts": "^0.8.21"
  }
}
